      <p class="card-text"><%= truncate post.mealtype, length: 50 %></p>
      <a href="#" class="card-link"><%= link_to 'View Recipe',  show_post_path(id: post.id) %></a>
    </div>
    </div>
   <% end %>
   </div></div>
<% else %>
